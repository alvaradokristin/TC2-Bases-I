@page
@model TC2_Bases.Pages.Add.AddSpareModel
@{
}

<br />
<h2>Registrar Repuesto</h2>
<br />

@*IN CASE THERE IS AN ERROR, IT WILL BE VISIBLE ON THE PAGE FOR THE USER TO KNOW*@
@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-desmissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

@*FORM TO GET THE USER INPUT TO UPDATE THE DATABASE*@
<form method="post">
    <div class="mb-3">
        <label for="spare-code" class="form-label">Codigo del repuesto:</label>
        <input type="text" class="form-control" id="spare-code" name="spare-code" value="@Model.sprInfo.code">
    </div>

    <div class="mb-3">
        <label for="spare-name" class="form-label">Nombre del repuesto:</label>
        <input type="text" class="form-control" id="spare-name" name="spare-name" value="@Model.sprInfo.name">
    </div>

    <div class="mb-3">
        <label for="spare-price" class="form-label">Precio del repuesto:</label>
        <input type="text" class="form-control" id="spare-price" name="spare-price" value="@Model.sprInfo.price">
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="alert alert-success alert-desmissible fade show" role="alert">
                <strong>@Model.successMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        </div>
    }

    <button type="submit" class="btn btn-outline-secondary">Agregar</button>
</form>